<script>
    function updateForm(action_name, data) {
        switch (action_name) {
            case 'register':
                document.registerform.action = '/login/register';
                document.registerform.method = 'POST'
                document.registerform.submit();
                break;
            case 'cancel':
                document.registerform.action = '/login/';
                document.registerform.method = 'GET'
                document.registerform.submit();
                break;
        }

    }
</script>
