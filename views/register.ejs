    <script src="/public/js/bootstrap.min.js"></script>
    <br>

    <form action="" name="registerform" id="registerform">
        


        <div>Username:<input type="text" name="username"  ></div>
        <div>Password: <input type="password" name="password"></div>
        <div>Confirm Password: <input type="password" name="passwordConf"></div>
        <div>Email: <input type="text" name="email"></div>

        <div>
            <input type="submit" value="Register" onclick="updateForm('register')">&nbsp;
            <input type="submit" value="Cancel" onclick="updateForm('cancel')">&nbsp;

        </div>
    </form>

</body>
